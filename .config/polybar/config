modules-center = date
modules-right = spotify pulseaudio cpu memory pacman-updates

tray-position = right
tray-padding = 9

separator = " "
separator-padding = 1

cursor-click = pointer
cursor-scroll = ns-resize

[module/pacman-updates]
type = custom/script
exec = python $HOME/.config/polybar/scripts/updates.py
interval = 600
label = "  %output%"
format-prefix = 
format-prefix-foreground = ${colors.icons-red}
click-right = exec alacritty -e yay --noconfirm

[module/spotify]
type = custom/script
interval = 1
format-prefix = " "
format-prefix-foreground = ${colors.green-spotify}
format = <label>
exec = python $HOME/.config/polybar/scripts/spotify.py -f '{artist}: {song}'

[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%

[module/bspwm]
